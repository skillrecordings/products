{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^generate"],
      "outputs": ["dist/**", ".next/**"]
    },
    "@skillrecordings/config#build": {
      "dependsOn": ["^build", "generate"],
      "env": ["CONVERTKIT_API_SECRET"],
      "outputs": ["dist/**"]
    },
    "@skillrecordings/database#build": {
      "cache": false,
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "postbuild": {
      "dependsOn": ["build"],
      "outputs": ["public/sitemap.xml", "public/robots.txt"]
    },
    "test": {
      "dependsOn": ["^build", "generate"]
    },
    "deploy": {
      "dependsOn": ["generate", "build", "test", "lint"]
    },
    "@skillrecordings/database#generate": {
      "dependsOn": [],
      "cache": false,
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^build", "generate"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "integration": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
