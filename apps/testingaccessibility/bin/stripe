#!/bin/bash

# Description:
#   Sets up the Stripe CLI to listen
# Usage:
#   bin/stripe

# Ensure the script can access the environment variables
export $(egrep -v '^#' .env.development | xargs)

endpoint="localhost:$LOCALHOST_PORT/api/skill/webhook/stripe"

echo
echo "Forwarding to $endpoint"
echo
stripe listen --forward-to endpoint
