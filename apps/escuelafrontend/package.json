{
  "name": "escuela-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production  next build",
    "postbuild": "NODE_ENV=production next-sitemap",
    "build:data": "node src/data/cache-json-data.js -p",
    "build:data:dev": "node src/data/cache-json-data.js",
    "build:dev": "pnpm build -w -- --scope=\"escuelafrontend\" --includeDependencies",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf .turbo node_modules .next dist",
    "dev": "next dev -p 3011",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,mdx,json}' --config ./.prettierrc",
    "integration": "cypress run",
    "lint": "TIMING=1 eslint src/**/*.{ts,tsx} --fix && tsc --noEmit",
    "start": "next start -p 3011",
    "test": "jest"
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
