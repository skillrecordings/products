{
  "name": "escuela-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "postbuild": "NODE_ENV=production next-sitemap",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf .turbo node_modules .next dist",
    "dev": "next dev -p 3011",
    "format": "prettier --write ./src/**/*",
    "integration": "cypress run",
    "lint": "TIMING=1 eslint src/**/*.{ts,tsx} --fix && tsc --noEmit",
    "start": "next start -p 3011",
    "test": "jest",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:start": "docker compose up -d",
    "db:generate": "pnpm -w generate"
  },
  "lint-staged": {
    "*.{js,json,md,mdx,ts,tsx}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "jest": {
    "preset": "@skillrecordings/scripts/jest/next"
  },
  "prisma": {
    "schema": "../../packages/database/prisma/schema.prisma"
  },
  "dependencies": {
