{
  "name": "skillrecordings",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production next build",
    "postbuild": "NODE_ENV=production next-sitemap",
    "build:data": "node src/data/cache-json-data.js -p",
    "build:data:dev": "node src/data/cache-json-data.js",
    "clean": "pnpm -r exec -- rm -rf .turbo node_modules .next",
    "dev": "next dev -p 3012",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,mdx,json}' --config ./.prettierrc",
    "integration": "cypress run",
    "lint": "TIMING=1 eslint src/**/*.{ts,tsx} --fix && tsc --noEmit",
    "start": "next start -p 3012",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,json,md,mdx,ts,tsx}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "jest": {
    "preset": "@skillrecordings/scripts/jest/next"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.22",
    "@next/mdx": "^12.2.4",
    "@reach/dialog": "^0.16.2",
    "@skillrecordings/analytics": "workspace:*",
    "@skillrecordings/config": "workspace:*",
    "@skillrecordings/convertkit": "workspace:*",
    "@skillrecordings/cookies": "workspace:*",
    "@skillrecordings/react": "workspace:*",
    "@skillrecordings/time": "workspace:*",
    "@stripe/stripe-js": "^1.21.1",
    "@tailwindcss/typography": "^0.5.2",
    "@tippyjs/react": "^4.2.6",
    "@xstate/react": "=1.5.1",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "classnames": "^2.3.1",
    "client-oauth2": "^4.3.3",
    "cookie": "^0.5.0",
    "date-fns": "^2.28.0",
    "dotenv-flow": "^3.2.0",
    "focus-visible": "^5.2.0",
    "formik": "2.2.9",
    "framer-motion": "^6.4.1",
    "lodash": "^4.17.21",
    "mdx-embed": "^0.0.22",
    "mdx-prism": "^0.3.4",
    "next": "^12.2.3",
    "next-sitemap": "^3.0.5",
    "next-themes": "^0.1.1",
    "pluralize": "^8.0.0",
    "postcss": "^8.4.14",
    "query-string": "^7.1.1",
    "react": "18.2.0",
    "react-countdown": "^2.3.2",
    "react-dom": "18.2.0",
    "react-markdown": "^7.1.0",
    "react-scroll": "^1.8.6",
    "react-stripe-checkout": "^2.6.3",
    "react-use": "^17.3.2",
    "react-use-clipboard": "^1.0.7",
    "rehype": "^12.0.0",
    "remark-code-titles": "^0.1.2",
    "remark-footnotes": "^4.0.1",
    "remark-slug": "^7.0.1",
    "slugify": "^1.6.2",
    "stripe": "^8.186.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@mdx-js/loader": "^1.6.22",
    "@skillrecordings/scripts": "workspace:*",
    "@skillrecordings/tsconfig": "workspace:*",
    "@skillrecordings/types": "workspace:*",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/cookie": "^0.4.1",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.179",
    "@types/mdx-js__react": "^1.5.5",
    "@types/node": "^17.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-scroll": "^1.8.3",
    "assert": "^2.0.0",
    "babel-jest": "^27.5.1",
    "commander": "^8.3.0",
    "eslint": "^8.19.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "msw": "^0.35.0",
    "next-compose-plugins": "^2.2.1",
    "next-images": "^1.8.4",
    "postcss-preset-env": "^7.4.2",
    "prettier": "^2.6.2",
    "react-test-renderer": "^17.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  }
}
