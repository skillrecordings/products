{
  "exclude": ["node_modules"],
  "extends": "@skillrecordings/tsconfig/nextjs.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src/",
    "incremental": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "process.d.ts",
    "src/pages/api/opengraph/[folder]"
  ]
}
